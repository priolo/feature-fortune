{
  "extends": "@tsconfig/node22",
  "compilerOptions": {

    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": ".",
    // "paths": {
    //   "@/*": [
    //     "./src/*"
    //   ]
    // },
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
  },
  "include": [
    "src"
, "tests"  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}